<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <Button
        android:id="@+id/btnlogin"
        android:text="登入"
        android:textColor="#FFFFFF"
        android:textSize="22.9sp"
        android:layout_width="252.3dp"
        android:layout_height="62.3dp"
        android:background="@drawable/btnstyle_one"
        />

    <Button
        android:id="@+id/btnOK"
        android:text="確認"
        android:textColor="#FFFFFF"
        android:textSize="22.9sp"
        android:layout_width="252.3dp"
        android:layout_height="62.3dp"
        android:background="@drawable/btnstyle_one"
        />

    <Button

        android:text="1"
        android:textColor="#27527B"
        android:textSize="18.9sp"

        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/btnstyle_two"
        />

    <Button

        android:text="不須檢測"
        android:textColor="#27527B"
        android:textSize="18.9sp"

        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:background="@drawable/btnstyle_two"
        />
    <Button

        android:text="PACS(體系醫院)"
        android:textColor="#27527B"
        android:textSize="18.9sp"

        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:background="@drawable/btnstyle_two"
        />
</LinearLayout>
